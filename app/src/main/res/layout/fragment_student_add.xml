<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapper_student_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextInputLayout">

            <EditText
                android:id="@+id/input_student_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Student name"
                android:inputType="textCapWords"
                android:textSize="34sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapper_student_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:theme="@style/TextInputLayout">

            <EditText
                android:id="@+id/input_student_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Student id"
                android:inputType="number"
                android:paddingTop="4dp"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Course" />

        <Spinner
            android:id="@+id/course_spinner"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Status" />

        <Spinner
            android:id="@+id/status_spinner"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapper_student_balanceCreditHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:theme="@style/TextInputLayout">

            <EditText
                android:id="@+id/input_student_balanceCreditHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Balance credit hour"
                android:inputType="number"
                android:paddingTop="4dp"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapper_student_cgpa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:theme="@style/TextInputLayout">

            <EditText
                android:id="@+id/input_student_cgpa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cgpa"
                android:inputType="numberDecimal"
                android:paddingTop="4dp"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Muet band" />

        <Spinner
            android:id="@+id/muet_spinner"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapper_student_financialDue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:theme="@style/TextInputLayout">

            <EditText
                android:id="@+id/input_student_financialDue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Financial due (RM)"
                android:inputType="numberDecimal"
                android:paddingTop="4dp"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

</LinearLayout>